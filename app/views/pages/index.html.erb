<% content_for :slider do %>
  <%= render 'slider' %>
<% end %>


<h2 class="title" style="text-align: center;">The Most Incredible Teleconference Ever! No, Really!</h2>
<%= simple_form_for(User.new, :as => :user, :url => registration_path(:user)) do |f| %>
<%= f.input :name %>
<%= f.input :email %>
<div class="buttons">
  <%= f.submit "Sign up" %>
</div>
<% end %> <div class="woo-sc-hr"></div>
<div id="wlmtestimonials">
  <div>
    <span class="testimonialImage">
      <%= image_tag "http://placehold.it/150x150" %>
    </span>
    <p class="testimonialText">
      <span style="font-size: 36px; vertical-align: -6px;">“</span>All I can say is OMG. I attended this seminar last year and learned so many amazing things - I've been married 3 times since then! There's no chance I would miss this.”
    </p>
    <p class="testimonialAuthor">
      — <strong>Random Lady</strong>, Particpant, Love On Purpose Revolution 2011
    </p>
  </div>
</div>
<div class="woo-sc-hr"></div>
<h2 class="subTitle">An Amazing Lineup of 25 Relationship Experts</h2>
<div class="bonusBox">
  <h3>Plus Special Bonus Offers Available Only to Participants</h3>
  <% Speaker.all.each_with_index do |speaker, i| %>
  <% if i % 5 == 0 && i !=0%> <div class="woo-sc-divider"></div>
  <% end %>
  <div class="fivecol-one<% if i % 5 == 4 %> last<% end %>">
    <div class="bonusItem">
      <%= image_tag "http://placehold.it/150x90", :class => 'noborder' %> <h5><%= speaker.name %></h5>
      <p>
        <%= speaker.bio %>
      </p>
    </div>
  </div>
  <% end %>
</div>
<div class="woo-sc-divider flat"></div>
<p class="highlighter">
  Don't you think it's time you got the knowledge and advice...
  <br>
  to find the relationship that will give you the love you deserve?
</p>
<div class="woo-sc-hr"></div>
<h2 style="color: #818787; text-align: center;">Brought to you by Our Amazing Sponsors</h2>

<% Sponsor.all.each do |sponsor| %>
  <%= link_to image_tag("http://placehold.it/150x40"), sponsor.url %>
<% end %>
