<%= simple_form_for resource, :url => form_resource_path, :html => {:multipart => true} do |f| %>
  <%= f.input :name %>
  <%= image_tag(resource.image_url(:small)) if resource.image? %>
  <%= f.input :image, :as => :file %>
  <%= f.hidden_field :image_cache %>
  <%= f.input :short_description, :input_html => {:rows => 3} %>
  <div class="buttons">
  <%= f.submit %>
  </div>
<% end %>
