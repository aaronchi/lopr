<%= tinymce %>
<%= simple_form_for resource, :url => form_resource_path, :html => {:multipart => true} do |f| %>
  <%= f.input :name %>
  <%= cl_image_tag(resource.image.filename, :width => 75, :height => 75, :crop => :fill, :gravity => :face, :class => 'indent') if resource.image? %>
  <%= f.input :image, :as => :file %>
  <%#= f.input :remote_image_url %>
  <%= f.hidden_field :image_cache %>
  <%= f.input :short_bio, :input_html => {:rows => 3} %>
  <%= f.input :bio, :input_html => {:class => "tinymce"} %>
  <div class="buttons">
  <%= f.submit %>
  </div>
<% end %>
